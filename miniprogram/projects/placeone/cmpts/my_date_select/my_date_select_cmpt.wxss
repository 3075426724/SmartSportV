 .date-cmpt {
 	width: 100%;
 	background-color: #F8F8F8;
 }

 .date-cmpt .month {
 	width: 100%;
	padding: 10rpx 15rpx; 
 	display: flex;
 	align-items: center;
 	justify-content: space-between;
 }

 .date-cmpt .month .left {
 	font-size: 32rpx;
 	color: #000;
 	font-weight: bold;
 }

 .date-cmpt .month .right {
 	font-size: 28rpx;
 	color: #777;
 	padding: 0 10rpx 0rpx 60rpx;
 }

 .date-select {
 	white-space: nowrap;
 }

 .date-select .item {
 	margin: 10rpx 10rpx 10rpx 0rpx;
 	text-align: center;
 	font-size: 24rpx;
 	width: 150rpx;
 	border: 2rpx solid #ddd;
 	border-radius: 17rpx;
 	display: inline-block;
 	padding: 10rpx 0;
 	position: relative;
 }

 .date-select .item:first-child {
 	margin-left: 5rpx;
 }

 .date-select .item .date {
 	font-size: 26rpx;
 	color: #666;
 }

 .date-select .item .week {
 	margin-bottom: 10rpx;
 	font-size: 28rpx;
 	color: #000;
 	font-weight: bold;
 }

 .date-select .item.cur {
 	background-color: #fcfcfa !important;
 	border: 2rpx solid var(--projectColor) !important;
 }

 .date-select .item.cur::after {
 	background: url("data:image/png;base64,");
 	background-size: 100% 100%;
 	bottom: -2rpx;
 	content: "";
 	display: block;
 	height: 28rpx;
 	position: absolute;
 	right: -2rpx;
 	width: 28rpx;
 }

 .rules {
 	padding-right: 10rpx;
 	padding-bottom: 10rpx;
 	font-size: 24rpx;
 	text-align: right;
 }