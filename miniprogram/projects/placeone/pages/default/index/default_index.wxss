@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
}

.up image {
	width: 100%;
	height: 450rpx;
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 10rpx 30rpx;
	margin-top: -100rpx;
	z-index: 9999;
}

.menu {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	padding: 20rpx 10rpx;
	border-radius: 14rpx !important;
	border-bottom-left-radius: 70rpx !important;
	border-top-right-radius: 70rpx !important;
}

.menu .item {
	width: 25%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 180rpx;

}

.menu .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.menu .item-inner .img {
	width: 104rpx;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: var(--projectColor);
	background-image: linear-gradient(45deg, #FED202, #fdde41);
	border-radius: 26rpx;
}

.menu .item-inner .img image {
	width: 56rpx;
	height: 56rpx;
}

.menu .item-inner .title {
	margin-top: 20rpx;
	font-size: 26rpx;
	color: #000;
}

.home-list-box {
	width: 100%;
	margin-bottom: 200rpx;
	margin-top: 20rpx;
}

.home-list-box .comm-list-box {
	padding: 20rpx 0rpx 30rpx 0rpx;
	overflow: unset;
}

.home-list-box .comm-list-box .item {
	border-radius: 10rpx !important;
	border-bottom-left-radius: 50rpx !important;
	border-top-right-radius: 50rpx !important;
}

.comm-list-box .item-leftbig1 .leftbig-left {
	border-radius: 10rpx !important;
	border-bottom-left-radius: 30rpx !important;
	border-top-right-radius: 30rpx !important;
}

.comm-list-box .item-leftbig1 .leftbig-right .leftbig-title {
	font-size: 30rpx;
	color: #333;
}

.comm-list-box .item-leftbig1 .leftbig-desc {
	font-size: 26rpx;
}

.comm-list-box .item-leftbig1 .leftbig-right {
	padding: 5rpx 0 20rpx;
	justify-content: space-between;
}

.comm-list-box .item-leftbig1 .leftbig-desc>text {
	color: #999 !important;
}