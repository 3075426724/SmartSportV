/*右边/左边图*/
.meet-list-box .item.item-rightpic,
.meet-list-box .item.item-leftpic {
	padding: 40rpx 30rpx 16rpx 40rpx;
	display: flex;
	flex-direction: column;
	background-color: #fff;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	position: relative;
}

.meet-list-box .item-rightpic .title,
.meet-list-box .item-leftpic .title {
	max-height: 88rpx;
	line-height: 44rpx;
	font-size: 32rpx;
	color: #000;
	font-weight: bold;
	z-index: 999;
}

.meet-list-box .item-rightpic .desc,
.meet-list-box .item-leftpic .desc {
	margin-top: 32rpx;
	display: flex;
	justify-content: center;
	align-items: flex-start;

}

.meet-list-box .item-rightpic .desc text,
.meet-list-box .item-leftpic .desc text {
	max-height: 120rpx;
	line-height: 40rpx;
	font-size: 28rpx;
	color: #000;
	flex: 1;
}

.meet-list-box .item-rightpic .desc .pic {
	margin-left: 15rpx;
	width: 180rpx;
	height: 122rpx;
	border-radius: 10rpx;
}


.meet-list-box .item-leftpic .desc .pic {
	margin-left: 0rpx;
	margin-right: 15rpx;
	width: 180rpx;
	height: 122rpx;
	border-radius: 10rpx;
}

