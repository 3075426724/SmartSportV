@import "../../style/skin.wxss";

page {
	background-color: #fff;
}

.main-face {
	margin-top: 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
 
.main-img-box .main-img{
	height:500rpx;
	width:500rpx; 
}

.share-main {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 20rpx;
}

.select-pic {
	width: 96%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	height: 200rpx;
	margin-top: 50rpx;
	margin-bottom: 80rpx;
}

.swiper-list { 
	flex: 1;
	height: 200rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.swiper-list .swiper-item {
	width: 170rpx !important;  
}
.swiper-list .swiper-item .swiper-item-box {
	width: 150rpx;
	height: 150rpx;
	background-image: url(data:image/png;base64,)
}

.swiper-list .swiper-item image {
	width: 150rpx;
	height: 150rpx;
}

.select-pic .swiper-next {
	width: 40rpx;
	height: 200rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #f8f8f8;
	border: 1rpx solid #ccc;
	border-radius: 6rpx;
}